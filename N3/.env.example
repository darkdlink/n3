# Database Configuration
MONGODB_URI=mongodb://localhost:27017/expense_management
MONGODB_USER=admin
MONGODB_PASSWORD=secure_password_123

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="Sistema de Despesas <noreply@empresa.com>"

# Cryptography Keys (Generate these in production)
ENCRYPTION_KEY=32_character_encryption_key_here
SIGNATURE_PRIVATE_KEY_PATH=/app/keys/private.pem
SIGNATURE_PUBLIC_KEY_PATH=/app/keys/public.pem

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./public/uploads/receipts

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_here

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Sistema de Gest√£o de Despesas"
APP_VERSION=1.0.0

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/certificate.crt
SSL_KEY_PATH=/etc/ssl/private/private.key

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log

# MongoDB Admin (for mongo-express)
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=secure_password_123
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin123

# GitHub Pages Configuration (for deployment)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=username/repository-name

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30